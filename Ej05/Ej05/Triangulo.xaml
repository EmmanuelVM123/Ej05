<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ej05.Triangulo"
             Title="Área Triángulo">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Entry x:Name="txtBase"
                   Placeholder="Ingrese la base del triángulo"
                   Keyboard="Numeric">
            </Entry>
            <Entry x:Name="txtAltura"
                   Placeholder="Ingrese la altura del triángulo"
                   Keyboard="Numeric">
            </Entry>
            <Button x:Name="btnCalcular"
                    Text="Calcular"
                    Clicked="btnCalcular_Clicked_1"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>